<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

	<!-- Declaration of references between XML nodes --> 
    <extension
         point="org.eclipse.wst.xml.search.editor.xmlReferences">
         <references
               contentTypeIds="com.liferay.ide.portlet.core.liferayportletxml">
            
            <!-- References of Java class -->
			<reference>		
				<from path="//portlet-url-class"
					  targetNodes="text()"
					  querySpecificationId="liferay.webinf.querySpecification" />
				<toJava />	
			</reference>

			<!-- References of CSS resources files -->
			<reference>		
				<from path="//header-portlet-css"
					  targetNodes="text()"
					  querySpecificationId="liferay.webinf.querySpecification" />
				<toResource querySpecificationId="liferay.webresources.css.querySpecification" />	
			</reference>
			
			<!-- References of JS resources files -->
			<reference>		
				<from path="//header-portlet-javascript"
					  targetNodes="text()"
					  querySpecificationId="liferay.webinf.querySpecification" />
				<toResource querySpecificationId="liferay.webresources.js.querySpecification" />	
			</reference>		
			
			<reference>		
				<from path="//footer-portlet-javascript"
					  targetNodes="text()"
					  querySpecificationId="liferay.webinf.querySpecification" />
				<toResource querySpecificationId="liferay.webresources.js.querySpecification" />	
			</reference>							

			<!-- /References of Images files -->
			<reference>		
				<from path="//icon"
					  targetNodes="text()" />
				<toResource querySpecificationId="liferay.webresources.image.querySpecification" />	
			</reference>		
							
         </references>
   </extension>
   
  	<extension point="org.eclipse.wst.sse.ui.editorConfiguration">
		<sourceViewerConfiguration
			class="org.eclipse.wst.xml.search.editor.XMLReferencesStructuredTextViewerConfiguration"
			target="com.liferay.ide.portlet.core.liferayportletxml" />   			
	</extension>

   <!-- Source validation for XML liferay.web.xml files  -->
   <extension point="org.eclipse.wst.sse.ui.sourcevalidation">
		<validator
			scope="partial"
			class="org.eclipse.wst.xml.ui.internal.validation.MarkupValidator"
			id="com.liferay.ide.portlet.core.liferayportletxml.validation.MarkupValidator">
			<contentTypeIdentifier id="com.liferay.ide.portlet.core.liferayportletxml">
				<partitionType id="org.eclipse.wst.xml.XML_DEFAULT">
				</partitionType>
			</contentTypeIdentifier>			
		</validator>
	</extension>
   <extension point="org.eclipse.wst.sse.ui.sourcevalidation">
		<validator
			scope="partial"
			class="org.eclipse.wst.xml.ui.internal.validation.DelegatingSourceValidatorForXML"
			id="com.liferay.ide.portlet.core.liferayportletxml.validation.DelegatingSourceValidatorForXML">
			<contentTypeIdentifier id="com.liferay.ide.portlet.core.liferayportletxml">
				<partitionType id="org.eclipse.wst.xml.XML_DEFAULT">
				</partitionType>
			</contentTypeIdentifier>		
		</validator>
	</extension>	
	   	
   <extension point="org.eclipse.wst.sse.ui.sourcevalidation">
		<validator
			scope="partial"
			class="org.eclipse.wst.xml.search.editor.validation.XMLReferencesValidator"
			id="com.liferay.ide.portlet.core.liferayportletxml.validation.Validator">
			<contentTypeIdentifier id="com.liferay.ide.portlet.core.liferayportletxml">
				<partitionType id="org.eclipse.wst.xml.XML_DEFAULT">
				</partitionType>
			</contentTypeIdentifier>
		</validator>
	</extension>
	
   <extension
         point="org.eclipse.wst.xml.search.core.querySpecifications">
        <querySpecification id="liferay.liferayportletxml.querySpecification" 
        				    class="com.liferay.ide.xml.core.search.LiferyPortletQuerySpecification" />
   </extension>
   
   <extension
         point="org.eclipse.wst.xml.search.core.resourceQuerySpecifications">
        <querySpecification id="liferay.webresources.html.querySpecification" 
        				    class="com.liferay.ide.xml.core.search.HTMLResourcesQuerySpecification" />
        <querySpecification id="liferay.webresources.css.querySpecification" 
        				    class="com.liferay.ide.xml.core.search.CSSResourcesQuerySpecification" />        				    
        <querySpecification id="liferay.webresources.js.querySpecification" 
        				    class="com.liferay.ide.xml.core.search.JSResourcesQuerySpecification" />  
		<querySpecification id="liferay.webresources.image.querySpecification" 
        				    class="com.liferay.ide.xml.core.search.ImageResourcesQuerySpecification" /> 
   </extension>		      
   		
</plugin>
